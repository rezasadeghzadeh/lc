<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent">
    <LinearLayout android:id="@+id/learn_progress"
        android:layout_width="match_parent"
        android:background="#f45353"
        android:layout_height="10dp"
        android:orientation="horizontal">
        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ScrollView  android:layout_below="@+id/learn_progress" android:layout_height="match_parent" android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:background="#f5f5f5" android:orientation="vertical" android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/question_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/review_question_box"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="@dimen/layout_padding">

                <ImageView
                    android:layout_gravity="right"
                    android:id="@+id/speech"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_speaker" />

                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="3dp"
                    android:text="Question"
                    android:textSize="@dimen/header2" />
                <ImageView
                    android:textAlignment="center"
                    android:id="@+id/review_question_image_view"
                    android:visibility="gone"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"/>

            </LinearLayout>

            <LinearLayout style="@style/answers_container">

                <!--option1 -->
                <LinearLayout
                    android:id="@+id/option_box_container_1"
                    style="@style/option_box_container">
                    <TextView
                        android:id="@+id/option_letter_1"
                        android:text="A"
                        style="@style/answer_option_box_gray" />

                    <LinearLayout
                        style="@style/answer_box_container"
                        android:id="@+id/option_box_1">

                        <TextView
                            android:id="@+id/option1"
                            style="@style/answer_text" />

                        <ImageView
                            android:id="@+id/image_option_1"
                            style="@style/answer_image"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <!--option2 -->
                <LinearLayout
                    android:id="@+id/option_box_container_2"
                    style="@style/option_box_container">
                    <TextView
                        android:id="@+id/option_letter_2"
                        android:text="B"
                        style="@style/answer_option_box_gray"/>

                    <LinearLayout
                        android:id="@+id/option_box_2"
                        style="@style/answer_box_container">

                        <TextView
                            android:id="@+id/option2"
                            style="@style/answer_text" />

                        <ImageView
                            android:id="@+id/image_option_2"
                            style="@style/answer_image"/>
                    </LinearLayout>
                </LinearLayout>

                <!--option3 -->
                <LinearLayout
                    android:id="@+id/option_box_container_3"
                    style="@style/option_box_container">
                    <TextView
                        android:id="@+id/option_letter_3"
                        android:text="C"
                        style="@style/answer_option_box_gray"/>

                    <LinearLayout
                        android:id="@+id/option_box_3"
                        style="@style/answer_box_container">

                        <TextView
                            android:id="@+id/option3"
                            style="@style/answer_text"/>

                        <ImageView
                            android:id="@+id/image_option_3"
                            style="@style/answer_image"/>
                    </LinearLayout>
                </LinearLayout>

                <!--option4 -->
                <LinearLayout
                    android:id="@+id/option_box_container_4"
                    style="@style/option_box_container">
                    <TextView
                        android:id="@+id/option_letter_4"
                        android:text="D"
                        style="@style/answer_option_box_gray"/>

                    <LinearLayout
                        android:id="@+id/option_box_4"
                        style="@style/answer_box_container">

                        <TextView
                            android:id="@+id/option4"
                            style="@style/answer_text"/>

                        <ImageView
                            android:id="@+id/image_option_4"
                            style="@style/answer_image"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/next_btn"
                            android:layout_width="65dp"
                            android:layout_height="38dp"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_margin="5dp"
                            android:background="#fff"
                            android:padding="5dp"
                            android:src="@drawable/next_arrow" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/current_flashcard"
                                android:text="1"
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="@string/of"
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/total_flashcard"
                                android:text="10"
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/previous_btn"
                            android:layout_width="65dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_alignParentRight="true"
                            android:background="#fff"
                            android:padding="3dp"
                            android:src="@drawable/previous_arrow" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
