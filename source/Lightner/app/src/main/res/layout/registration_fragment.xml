<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        style="@style/header4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="پایه تحصیلی" />

    <Spinner
        style="@style/spinnerBox"
        android:id="@+id/education_base_spin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/spinner_box"/>
    <TextView
        android:id="@+id/textView7"
        style="@style/header4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رشته تحصیلی"   />

    <Spinner
        style="@style/header4"
        android:id="@+id/education_field_spin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/spinner_box"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_btn"
            android:background="@drawable/round_button_enabled"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ذخیره" />
    </LinearLayout>

</RelativeLayout>