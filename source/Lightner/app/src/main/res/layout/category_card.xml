<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_category_radius">

        <LinearLayout
            android:id="@+id/parent_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/category_header"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/card_margin"
                android:layout_height="20dp" >

            </RelativeLayout>
            <LinearLayout
                android:background="#70000000"
                android:id="@+id/text_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_padding">

                <TextView
                    android:id="@+id/title"
                    style="@style/header2"
                    android:textDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="زبان ۱"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/category_title" />

                <TextView
                    android:id="@+id/reviewable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/category_title_padding"
                    android:paddingLeft="@dimen/category_title_padding"
                    android:paddingRight="@dimen/category_title_padding"
                    android:paddingTop="@dimen/category_title_padding"
                    android:text="قابل مرور: "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/header4" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/category_title_padding"
                    android:paddingLeft="@dimen/category_title_padding"
                    android:paddingRight="@dimen/category_title_padding"
                    android:paddingTop="@dimen/category_title_padding"
                    android:text="کل: "
                    android:textColor="#ffffff"

                    android:textSize="@dimen/header4" />

                <TextView
                    android:id="@+id/last_visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/category_title_padding"
                    android:paddingRight="@dimen/category_title_padding"
                    android:paddingTop="@dimen/category_title_padding"
                    android:paddingBottom="@dimen/category_title_padding"
                    android:textColor="#ffffff"
                    android:text="آخرین مرور: "
                    android:textSize="@dimen/header5" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>