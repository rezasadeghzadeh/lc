<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/scroll_view">
    <LinearLayout
        android:layout_width="match_parent" android:layoutDirection="rtl" android:background="#fff" android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/question_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradiant_4"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="@dimen/layout_padding">

            <ImageView
                android:layout_gravity="left"
                android:id="@+id/speech"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_speaker" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="Question"
                android:textSize="@dimen/header2" />
            <ImageView
                android:textAlignment="center"
                android:id="@+id/review_question_image_view"
                android:visibility="gone"
                android:layout_width="300dp"
                android:layout_height="300dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer_box"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_below="@+id/question_box"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradiant_4"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="Answer"
                    android:textColor="#fff"
                    android:textSize="@dimen/header2" />

                <ImageView
                    android:id="@+id/review_answer_image_view"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/correct_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button_green"
                android:padding="3dp"
                android:visibility="invisible"
                android:src="@drawable/ic_checkmark" />

            <Button
                android:id="@+id/view_answer_btn"
                android:layout_width="218dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/gradiant_1"
                android:gravity="center"
                android:text="پاسخ"
                android:textColor="#fff" />

            <ImageButton
                android:id="@+id/incorrect_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button_red"
                android:padding="3dp"
                android:visibility="invisible"
                android:src="@drawable/ic_multiply" />

        </LinearLayout>


        </LinearLayout>

</ScrollView>
