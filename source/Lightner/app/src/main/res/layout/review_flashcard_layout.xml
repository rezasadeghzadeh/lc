<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/question_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/review_question_box"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding">

            <ImageView
                android:id="@+id/speech"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_speaker" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:text="Question"
                android:textSize="@dimen/header2" />

            <ImageView
                android:id="@+id/review_question_image_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:textAlignment="center"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout style="@style/answers_container">

            <!--option1 -->
            <LinearLayout
                android:id="@+id/option_box_container_1"
                style="@style/option_box_container">
                <TextView
                    android:id="@+id/option_letter_1"
                    android:text="A"
                    style="@style/answer_option_box_gray" />

                <LinearLayout
                    style="@style/answer_box_container"
                    android:id="@+id/option_box_1">

                    <TextView
                        android:id="@+id/option1"
                        style="@style/answer_text" />

                    <ImageView
                        android:id="@+id/image_option_1"
                        style="@style/answer_image"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!--option2 -->
            <LinearLayout
                android:id="@+id/option_box_container_2"
                style="@style/option_box_container">
                <TextView
                    android:id="@+id/option_letter_2"
                    android:text="B"
                    style="@style/answer_option_box_gray"/>

                <LinearLayout
                    android:id="@+id/option_box_2"
                    style="@style/answer_box_container">

                    <TextView
                        android:id="@+id/option2"
                        style="@style/answer_text" />

                    <ImageView
                        android:id="@+id/image_option_2"
                        style="@style/answer_image"/>
                </LinearLayout>
            </LinearLayout>

            <!--option3 -->
            <LinearLayout
                android:id="@+id/option_box_container_3"
                style="@style/option_box_container">
                <TextView
                    android:id="@+id/option_letter_3"
                    android:text="C"
                    style="@style/answer_option_box_gray"/>

                <LinearLayout
                    android:id="@+id/option_box_3"
                    style="@style/answer_box_container">

                    <TextView
                        android:id="@+id/option3"
                        style="@style/answer_text"/>

                    <ImageView
                        android:id="@+id/image_option_3"
                        style="@style/answer_image"/>
                </LinearLayout>
            </LinearLayout>

            <!--option4 -->
            <LinearLayout
                android:id="@+id/option_box_container_4"
                style="@style/option_box_container">
                <TextView
                    android:id="@+id/option_letter_4"
                    android:text="D"
                    style="@style/answer_option_box_gray"/>

                <LinearLayout
                    android:id="@+id/option_box_4"
                    style="@style/answer_box_container">

                    <TextView
                        android:id="@+id/option4"
                        style="@style/answer_text"/>

                    <ImageView
                        android:id="@+id/image_option_4"
                        style="@style/answer_image"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
