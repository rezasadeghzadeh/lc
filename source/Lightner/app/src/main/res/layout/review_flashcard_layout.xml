<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/scroll_view">
    <LinearLayout
        android:layout_width="match_parent" android:layoutDirection="ltr" android:background="#fff" android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/question_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradiant_4"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="@dimen/layout_padding">

            <ImageView
                android:layout_gravity="right"
                android:id="@+id/speech"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_speaker" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="Question"
                android:textSize="@dimen/header2" />
            <ImageView
                android:textAlignment="center"
                android:id="@+id/review_question_image_view"
                android:visibility="gone"
                android:layout_width="300dp"
                android:layout_height="300dp" />

        </LinearLayout>

        <!--option1 -->
        <LinearLayout
            android:id="@+id/option_box_container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:text="A"
                android:textSize="@dimen/header2" />

            <LinearLayout
                android:id="@+id/option_box_1"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradiant_1"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding"
                android:visibility="visible"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/option1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/header2" />

                    <ImageView
                        android:id="@+id/image_option_1"
                        android:layout_gravity="center"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:textAlignment="center"
                        android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!--option2 -->
        <LinearLayout
            android:id="@+id/option_box_container_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:text="B"
                android:textSize="@dimen/header2" />

            <LinearLayout
                android:id="@+id/option_box_2"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradiant_1"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/header2" />

                <ImageView
                    android:id="@+id/image_option_2"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="300dp"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!--option3 -->
        <LinearLayout
            android:id="@+id/option_box_container_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:text="C"
                android:textSize="@dimen/header2" />

            <LinearLayout
                android:id="@+id/option_box_3"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradiant_1"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/header2" />

                <ImageView
                    android:id="@+id/image_option_3"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="300dp"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!--option4 -->
        <LinearLayout
            android:id="@+id/option_box_container_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:text="D"
                android:textSize="@dimen/header2" />

            <LinearLayout
                android:id="@+id/option_box_4"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradiant_1"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/header2" />

                <ImageView
                    android:id="@+id/image_option_4"
                    android:layout_width="300dp"
                    android:layout_gravity="center"
                    android:layout_height="300dp"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
