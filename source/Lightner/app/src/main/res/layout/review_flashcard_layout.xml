<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent" android:layoutDirection="rtl"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/question_box"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/lightner_box"
        android:orientation="vertical"
        android:layout_margin="@dimen/card_margin"
        android:padding="@dimen/layout_padding">

        <ImageView
            android:layout_gravity="left"
            android:id="@+id/speaker"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_speaker" />

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="Question"
            android:textSize="@dimen/header2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/answer_box"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/lightner_box"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding"
        android:layout_below="@+id/question_box"
        android:layout_margin="@dimen/card_margin"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:text="Answer"
                android:textSize="@dimen/header2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/layout_padding"
        android:layout_margin="@dimen/card_margin">
        <!--android:background="#559344"-->
        <ImageButton
            android:id="@+id/correct_btn"
            android:background="#559344"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_checkmark"
            android:padding="3dp"
            android:layout_height="50dp"   />

        <Button
            android:id="@+id/view_answer_btn"
            android:layout_width="0dp"
            android:background="#dce0e5"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="پاسخ" />
        <ImageButton
            android:id="@+id/incorrect_btn"
            android:background="#ce0606"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_multiply"
            android:padding="3dp"
            android:layout_height="50dp"   />

    </LinearLayout>

</RelativeLayout>