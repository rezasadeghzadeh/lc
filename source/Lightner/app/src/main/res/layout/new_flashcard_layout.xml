<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_margin"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:background="@drawable/gradiant_4"
            android:padding="@dimen/layout_padding">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/question"
                android:textColor="#fff"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/question"
                    style="@style/textBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_text_box"
                    android:inputType="textPersonName">

                    <requestFocus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </EditText>

                <ImageButton
                    android:id="@+id/take_question_image"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_camera" />

                <ImageView
                    android:id="@+id/question_image_view"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_margin"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:background="@drawable/gradiant_4"
            android:padding="@dimen/layout_padding">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/answer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/answer"
                    style="@style/textBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_text_box"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/take_answer_image"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_camera" />

                <ImageView
                    android:id="@+id/answer_image_view"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:textAlignment="center"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
