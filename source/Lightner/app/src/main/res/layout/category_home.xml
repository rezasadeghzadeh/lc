<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/start_review_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradiant_7"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/start_review_btn11"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_enabled"
                    android:text="@string/start_lightner_review"
                    android:textColor="#a74be9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="4dp" />

                <Button
                    android:id="@+id/free_review_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_enabled"
                    android:text="@string/free_review"
                    android:textColor="#a74be9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/what_is_lightner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/what_is_lightner" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/more_info_about_leithner"
                        android:textSize="11dp" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/learn_more"
                        android:text="@string/Learn_more"
                        android:textSize="10dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/category_box1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/gradiant_1"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/header_title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/box_1"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="@dimen/header3" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#cae2f9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/total_words_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/available"
                            android:textColor="#fff"
                            android:textSize="@dimen/header5" />

                        <TextView
                            android:id="@+id/reviewable_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/reviewable"
                            android:textColor="#fff"
                            android:textDirection="rtl"
                            android:textSize="@dimen/header5" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_box2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/gradiant_2"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/header_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:text="@string/box_2"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="@dimen/header3" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#fadcbd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/total_words_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/available"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/header5" />

                        <TextView
                            android:id="@+id/reviewable_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/reviewable"
                            android:textColor="@android:color/white"
                            android:textDirection="rtl"
                            android:textSize="@dimen/header5" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_box3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/gradiant_3"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/header_title3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/box_3"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="@dimen/header3" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".75dp"
                        android:background="#ccf8c3d4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/total_words_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/available"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/header5" />

                        <TextView
                            android:id="@+id/reviewable_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/reviewable"
                            android:textColor="@android:color/white"
                            android:textDirection="rtl"
                            android:textSize="@dimen/header5" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_box4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/gradiant_4"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/header_title4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/box_4"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="@dimen/header3" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#f3dbff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/total_words_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/available"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/header5" />

                        <TextView
                            android:id="@+id/reviewable_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/reviewable"
                            android:textColor="@android:color/white"
                            android:textDirection="rtl"
                            android:textSize="@dimen/header5" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_box5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/gradiant_5"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/header_title5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/box_5"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="@dimen/header3" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".75dp"
                        android:background="#c4f5ec" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/total_words_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/available"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/header5" />

                        <TextView
                            android:id="@+id/reviewable_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/category_title_padding"
                            android:paddingLeft="@dimen/category_title_padding"
                            android:paddingRight="@dimen/category_title_padding"
                            android:paddingTop="@dimen/category_title_padding"
                            android:text="@string/reviewable"
                            android:textColor="@android:color/white"
                            android:textDirection="rtl"
                            android:textSize="@dimen/header5" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_tick"
        android:layout_above="@+id/start_review_btn"/>
    <Button
        android:id="@+id/start_review_btn"
        android:textColor="#fff"
        android:background="#41a044"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/lightner_review" />

</RelativeLayout>