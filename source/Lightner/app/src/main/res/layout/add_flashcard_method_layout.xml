<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/gradiant_4"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_manually_flashcard_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/round_button_enabled"
            android:textColor="#a74be9"
            android:text="Create Flashcard" />

        <Button
            android:id="@+id/buy_flashcard_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/round_button_enabled"
            android:textColor="#a74be9"
            android:text="Buy Package" />
    </LinearLayout>

</RelativeLayout>

