<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#42a5f5</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/MyActionBar</item>
        <item name="colorControlNormal">#f5f5f5</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyActionBar">
        <item name="titleTextColor">#fff</item>
        <item name="android:textSize">36dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="header1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/header1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/header2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header3">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header4">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/header4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="header5">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/header5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBox">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="spinnerBox">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


</resources>
